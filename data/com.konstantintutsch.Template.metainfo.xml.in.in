    <update_contact>mail@konstantintutsch.com</update_contact>
    <developer id="com.konstantintutsch">
        <name translate="no">Konstantin Tutsch</name>
    </developer>
    <branding>
        <color type="primary" scheme_preference="light">#5e2028</color>
        <color type="primary" scheme_preference="dark">#5e2028</color>
    </branding>
